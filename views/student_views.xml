<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
<!--    form view-->
        <record id="student_view_form" model="ir.ui.view">
            <field name="name">Student_student_form_view</field>
            <field name="model">institution.student</field>


            <field name="arch" type="xml">
                <form string="Institution Student" >

                    <sheet>
                        <group string="Student detail">
                            <field name="user_id" readonly="1" default="lambda self: self.env.user"/>

                            <field name="student_no" readonly="1"/>
                            <field name="name"/>

                            <field name="date_of_birth"/>
                            <field name="age"/>
                        </group>
                        <group string="Guardian detail">
                            <field name="guardian_name"/>
                            <field name="guardian_phone"/>
                        </group>
                        <group>
                             <field name="course_ids"/>
                             <field name="batch_id"/>

                        </group>
                        <group string="Fee details">
                            <field name="fee_payment_ids" readonly="1"/>
                            <field name="total_fees_paid"/>

                            <field name="fees_status"/>
                        </group>
                        <group>
                            <field name="attendance_percentage"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    <!--    tree view-->
         <record id="student_view_tree" model="ir.ui.view">
            <field name="name">Student_student_tree_view</field>
            <field name="model">institution.student</field>

             <field name="arch" type="xml">
                    <list string="Institution Student">
                        <field name="student_no" readonly="1"/>
                        <field name="name"/>
                        <field name="course_ids"/>
                        <field name="batch_id"/>
                        <field name="fees_status"/>
                    </list>
            </field>
         </record>




<!--        student search -->


         <record id="student_view_search" model="ir.ui.view">
            <field name="name">institution.student.search</field>
            <field name="model">institution.student</field>
            <field name="arch" type="xml">

                    <search string="search">
                        <field name="name"/>
                        <field name="student_no"/>
                        <field name="batch_id"/>
                        <field name="course_ids"/>
                        <filter string="My record"
                                name="my_records"
                                domain="[('user_id', '=' , uid)]"/>
                    </search>
            </field>
         </record>
    <!--    action-->

         <record id="action_student_view" model="ir.actions.act_window">
             <field name="name">Student Data</field>
             <field name="res_model">institution.student</field>
             <field name="view_mode">list,form</field>
             <field name="search_view_id" ref="student_view_search"/>
         </record>




<!--        action student self-->


          <record id="action_student_self" model="ir.actions.act_window">
             <field name="name">My Profile</field>
             <field name="res_model">institution.student</field>
             <field name="view_mode">form</field>
              <field name="domain">[('user_id' , '=' , uid)]</field>
              <field name="context">{'create' : False}</field>
         </record>


    </data>
</odoo>