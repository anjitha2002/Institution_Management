<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="attendance_view_form" model="ir.ui.view">
            <field name="name">Attendance_attendance_form_view</field>
            <field name="model">institution.attendance</field>
            <field name="arch" type="xml">
                <form string=" Attendance">
                   <sheet>
                       <group>
                           <field name="date" />
                           <field name="student_id"/>
<!--                           <field name="batch_id"/>-->
                           <field name="status"/>


                       </group>
                   </sheet>
                </form>
            </field>
        </record>

       <record id="attendance_view_tree" model="ir.ui.view">
            <field name="name">Attendance_attendance_tree_view</field>
            <field name="model">institution.attendance</field>
            <field name="arch" type="xml">
                <list string=" Attendance">

                           <field name="date" />
                           <field name="student_id"/>
<!--                           <field name="batch_id"/>-->
                           <field name="status"/>



                </list>
            </field>
        </record>

        <record id="action_attendance_view" model="ir.actions.act_window">
            <field name="name">Attendance Data</field>
            <field name="res_model">institution.attendance</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
