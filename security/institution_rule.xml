<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

<!--        Teacher access their student data only-->
        <record id="rule_teacher_its_students" model="ir.rule">
            <field name="name">Teacher Own students</field>
            <field name="model_id" ref="model_institution_student"/>
            <field name="domain_force">
                [('batch_id.course_ids.teacher_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('institution.group_institution_teacher'))]"/>
        </record>


<!--        Students access its data only-->


        <record id="rule_student_own_data" model="ir.rule">
            <field name="name">Student Own Profile</field>
            <field name="model_id" ref="model_institution_student"/>
            <field name="domain_force">
                [('user_id', '=' ,user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('institution.group_institution_student'))]"/>
        </record>



<!--        Teacher can access only their courses-->

         <record id="rule_teacher_its_course" model="ir.rule">
            <field name="name">Teacher Own Courses</field>
            <field name="model_id" ref="model_institution_course"/>
            <field name="domain_force">
                [('teacher_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('institution.group_institution_teacher'))]"/>
        </record>


<!--        teacher access own batches-->

         <record id="rule_teacher_its_Batch" model="ir.rule">
            <field name="name">Teacher Own Batches</field>
            <field name="model_id" ref="model_institution_batch"/>
            <field name="domain_force">
                [('course_ids.teacher_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('institution.group_institution_teacher'))]"/>
        </record>


<!--        student block attendance,fees,teachers,batches-->

        <record id="rule_student_no_attendance" model="ir.rule">
            <field name="name">Student No attendance</field>
            <field name="model_id" ref="model_institution_attendance"/>
            <field name="domain_force">
                [(0, '=' ,1)]</field>

            <field name="groups" eval="[(4,ref('institution.group_institution_student'))]"/>
        </record>


           <record id="rule_student_no_fees" model="ir.rule">
            <field name="name">Student No fees</field>
            <field name="model_id" ref="model_institution_fee_payment"/>
            <field name="domain_force">
                [(0, '=' ,1)]</field>

            <field name="groups" eval="[(4,ref('institution.group_institution_student'))]"/>
        </record>



        <record id="rule_student_no_teacher" model="ir.rule">
            <field name="name">Student No teacher</field>
            <field name="model_id" ref="model_institution_teacher"/>
            <field name="domain_force">
                [(0, '=' ,1)]</field>

            <field name="groups" eval="[(4,ref('institution.group_institution_student'))]"/>

        </record>



        <record id="rule_student_no_batch" model="ir.rule">
            <field name="name">Student No batch</field>
            <field name="model_id" ref="model_institution_batch"/>
            <field name="domain_force">
                [(0, '=' ,1)]</field>

            <field name="groups" eval="[(4,ref('institution.group_institution_student'))]"/>
        </record>





    </data>
</odoo>